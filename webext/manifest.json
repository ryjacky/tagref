{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "permissions": [
    "nativeMessaging",
    "tabs"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "js": ["content.js"],
    "matches": ["<all_urls>", "https://*/*"]
  }],
  "description": "A plain text description"

}